<h1>みんなの投稿</h1>
<%= link_to '新規投稿', new_picture_path, class: 'btn btn-primary' %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>みんなの写真</th>
      <th>内容</th>
      <th>投稿者</th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'Show', picture %></td>
      </tr>
    <% end %>
  </tbody>
</table>
